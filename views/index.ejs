<%- include("header") %> 
  
  <div class="holder">
    <div>
      <h3>Login or <a href="/signup">Signup</a> to continue...</h3>
    </div>
    <div class="container">

      <form action="/auth/login" method="post">
        
        <div>
          <input type="email" name="email" id="email">
          <span>Email Address</span>
        </div>
        <div>
          <input type="password" name="password" id="password">
          <span>Password</span>
        </div>

        <% if(message) {  %>
          <div>
            <h4 id="instructions"><%= message %></h4>
          </div>
        <% } %>

        <button class="btn login-btn">LOGIN</button>


      </form>
      <div>
        OR  <button id="forgetPass"> Forget Password </button>
      </div>
    </div>
  </div>

  <%- include("footer") %> 